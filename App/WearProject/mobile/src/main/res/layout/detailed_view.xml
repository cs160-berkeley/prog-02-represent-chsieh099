<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:id="@+id/detailedll"
        android:background="@drawable/detailedbgdem">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/barbaraboxer"
            android:layout_margin="30dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="REPUBLICAN"
                android:textSize="14dp"
                android:gravity="center"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:background="@color/navy"
                android:textColor="@color/white"
                android:padding="3dp"
                android:layout_marginTop="3dp"
                android:letterSpacing=".1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Barbara Boxer"
                android:id="@+id/textView7"
                android:textSize="35dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/navy"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SENATOR"
                    android:id="@+id/textView8"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/navy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/textView9"
                    android:textColor="@color/navy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2017"
                    android:id="@+id/textView10"
                    android:textColor="@color/navy" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/committeebillsll"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/navy">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMITTEES"
                android:id="@+id/textView11"
                android:textColor="@color/white"
                android:letterSpacing=".1"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agriculture, Nutrition and Foresty Committee, Appropriations Committee, Foreign Relations, Judiciary Committee, Rules and Administration Committee, Veterans' Affairs Committee"
                android:id="@+id/textView12"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECENT BILLS"
                android:id="@+id/textView13"
                android:textColor="@color/white"
                android:letterSpacing=".1"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprehensive Addiction and Recovery Act of 2016, Improving Coal Combustion Residuals Regulation Act of 2016, Preventing Crimes Against Veterans Act of 2016, Ocmulgee Mounds National Historical Park Boundary Revision Act of 2015"
                android:id="@+id/textView14"
                android:textColor="@color/white"
                android:layout_margin="5dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>