<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Senator or Representative"
            android:textSize="10dp"
            android:id="@+id/textView5"
            android:gravity="center"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing=".2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/imagebar">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:id="@+id/imageView"
                android:gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PARTY"
                android:id="@+id/textView3"
                android:textColor="@color/white"
                android:background="@color/navy"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Representative Name"
                android:id="@+id/textView2"
                android:textColor="@color/navy"
                android:textStyle="bold"
                android:gravity="center" />
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="tweet tweet tweet tweet tweet tweet tweet tweet tweet tweet tweet tweet"
                android:id="@+id/textView4"
                android:textColor="@color/navy"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/sidebar">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageButton"
                android:background="@drawable/website"
                android:layout_gravity="center"
                android:layout_marginBottom="8sp"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/email"
                android:layout_gravity="center"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/info"
                android:layout_gravity="center"
                android:layout_marginTop="8sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>