<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="chsieh099.wearproject.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/navy">


    <ImageView
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:id="@+id/imageView2"
        android:background="@drawable/stars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:alpha="0.4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPRESENT"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_marginTop="160dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:letterSpacing=".2"/>
    <ImageView
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:id="@+id/imageView2"
        android:background="@drawable/stars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:alpha="0.4"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="12"
        android:id="@+id/editText"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/opaqueWhite"
        android:gravity="center_horizontal"
        android:hint="ENTER ZIPCODE"
        android:textColorHint="@color/lightgray"
        android:letterSpacing=".1"
        android:layout_gravity="center"
        android:paddingTop="7dp"
        android:maxLength="5"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:letterSpacing=".1"
        android:onClick="submitZipcode"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Choose Current Location"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_centerHorizontal="true"
        android:id="@+id/button2"
        android:layout_marginTop="450dp"
        android:background="@color/navy"
        android:textColor="@color/opaqueWhite"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:onClick="submitCurrentLocation" >
    </Button>

</RelativeLayout>